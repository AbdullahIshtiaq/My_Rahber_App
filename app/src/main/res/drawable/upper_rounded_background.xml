<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Define the corners' radius for rounded corners -->
    <corners
        android:topLeftRadius="@dimen/_15sdp"
        android:topRightRadius="@dimen/_15sdp" />

    <!-- Define the solid fill color (transparent) -->
    <solid android:color="@android:color/transparent" />

    <!-- Define the stroke (outline) -->
    <stroke
        android:width="1dp"
        android:color="@color/grey_shade" />
</shape>
